{
  "name": "jest-expect-openapi",
  "version": "1.1.0",
  "description": "Jest/Vitest matcher for asserting valid OpenAPI definitions",
  "license": "MIT",
  "author": "Jon Ursenbach <jon@readme.io>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "jest",
    "vitest",
    "openapi",
    "matchers",
    "expect",
    "extend",
    "extended",
    "test",
    "testing",
    "assertions"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/readmeio/oas.git",
    "directory": "packages/jest-expect-openapi"
  },
  "bugs": {
    "url": "https://github.com/readmeio/oas/issues"
  },
  "scripts": {
    "build": "tsc",
    "lint": "npm run lint:types && npm run lint:js",
    "lint:js": "eslint . --ext .js,.ts --ignore-path ../../.gitignore",
    "lint:types": "tsc --noEmit",
    "prebuild": "rm -rf dist/",
    "prepack": "npm run build",
    "test": "echo 'Please run tests from the root!' && exit 1"
  },
  "dependencies": {
    "@readme/openapi-parser": "file:../parser",
    "@vitest/expect": "^3.0.7"
  },
  "peerDependencies": {
    "jest": "^29.0.2"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vitest": "^3.0.4"
  },
  "prettier": "@readme/eslint-config/prettier"
}
